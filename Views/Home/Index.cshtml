@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title></title>
    <link href="site.css" rel="stylesheet" type="text/css" />
    <script src="site.js"></script>
</head>
<body>
    <h1>Create a Test</h1>

    <form action="" method="post">
        <div>
            <label for="testName">Title:</label>
            <input type="text" id="testName" name="testName">
        </div><br>
        <div>
            <label for="description">Description:</label>
            <input type="text" id="description" name="description">
        </div>
        <h2>Questions</h2>
        <div id="questionsSection">
        </div>
        <br>
        <div>
            <button id="addQuestion">Add a Question</button><br>
            <button id="submit">Finish and Save Test</button><br>
            <button id="discard">Discard Test</button>
        </div>
    </form>
</body>
</html>