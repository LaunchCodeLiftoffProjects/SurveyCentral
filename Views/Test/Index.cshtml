@model List<TestCentral.Models.Test>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Add" asp-controller="Test">Create New Test</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Test Name
            </th>
            <th>
                Description
            </th>
            <th>
                Created Date
            </th>
            <th>
                Last Updated
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.NameOfTest
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.CreatedAt.ToShortDateString()
            </td>
            <td>
                @item.UpdatedAt.ToShortDateString()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
